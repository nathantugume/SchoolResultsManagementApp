<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Class Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextClassName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Streams">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextStrams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="A,B,C... Zebra,Tiger ..."

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Level">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextClassLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Material AutoCompleteTextView for Subject Selection -->
    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/autoCompleteTextViewSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subjects"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/editTextPhone"/>

    <!-- ChipGroup for displaying selected subjects -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>





</LinearLayout>
